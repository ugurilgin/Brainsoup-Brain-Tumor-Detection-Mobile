        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.814" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="296dp"
        android:layout_height="46dp"
        tools:layout_editor_absoluteX="46dp"
